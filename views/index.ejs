<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Enov8 Help Portal - Professional Support & Resources</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content="Your comprehensive resource center for Enov8 support, documentation, tutorials, and expert guidance.">
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <!-- Box Icons CDN for icons -->
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
  
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/theme.css">
  
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
  
  <link rel="icon" type="image/x-icon" href="/favicon-32x32.png">
  <style>
    /* Import faq.css variables and base styles */
    :root {
      --body-color: #f8f9fa;
      --sidebar-color: #ffffff;
      --primary-color: #246a28;
      --primary-color-light: #f6f8fa;
      --toggle-color: #e9ecef;
      --text-color: #495057;
      --border-color: #dee2e6;
      --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
      --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
      --tran-03: all 0.2s ease;
      --tran-04: all 0.3s ease;   
      --tran-05: all 0.3s ease;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      background-color: var(--body-color);
      color: var(--text-color);
      font-family: 'Poppins', sans-serif;
      padding-top: 80px;
      min-height: 100vh;
      transition: var(--tran-05);
    }

    .main-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 40px 20px;
    }

    /* Header Section */
    .header-section {
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 20px;
      gap: 30px;
      flex-wrap: wrap;
    }

    .logo-container {
      flex-shrink: 0;
    }

    .logo-image {
      width: 80px;
      height: 80px;
      object-fit: contain;
      filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.1));
      transition: var(--tran-04);
    }

    .logo-image:hover {
      transform: scale(1.05);
    }

    .header-text {
      text-align: center;
    }

    .main-heading {
      font-size: 3.5rem;
      font-weight: 700;
      color: var(--primary-color);
      margin: 0;
      line-height: 1.2;
      background: linear-gradient(135deg, var(--primary-color) 0%, #2d7a30 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .sub-heading {
      font-size: 1.3rem;
      color: var(--text-color);
      margin-top: 15px;
      font-weight: 400;
      opacity: 0.8;
      text-align: center;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
      line-height: 1.5;
    }

    /* Tiles Section */
    .tiles-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 30px;
      margin-top: 50px;
    }

    .tile {
      background: var(--sidebar-color);
      border-radius: 20px;
      padding: 40px 30px;
      text-align: center;
      transition: var(--tran-04);
      border: 1px solid var(--border-color);
      box-shadow: var(--shadow);
      position: relative;
      overflow: hidden;
    }

    .tile::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, var(--primary-color), #4ade80);
      border-radius: 20px 20px 0 0;
    }

    .tile:hover {
      transform: translateY(-8px);
      box-shadow: var(--shadow-lg);
      border-color: rgba(36, 106, 40, 0.2);
    }

    .tile-icon {
      font-size: 3.5rem;
      color: var(--primary-color);
      margin-bottom: 25px;
      transition: var(--tran-04);
    }

    .tile:hover .tile-icon {
      transform: scale(1.1);
      color: #4ade80;
    }

    .tile-title {
      font-size: 1.5rem;
      font-weight: 600;
      color: var(--text-color);
      margin-bottom: 15px;
    }

    .tile-description {
      font-size: 1rem;
      color: var(--text-color);
      opacity: 0.7;
      line-height: 1.6;
      margin-bottom: 25px;
    }

    .tile-link {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 12px 24px;
      background: linear-gradient(135deg, var(--primary-color) 0%, #2d7a30 100%);
      color: white;
      text-decoration: none;
      border-radius: 12px;
      font-weight: 500;
      transition: var(--tran-04);
      box-shadow: 0 4px 12px rgba(36, 106, 40, 0.3);
    }

    .tile-link:hover {
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 6px 16px rgba(36, 106, 40, 0.4);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .header-section {
        flex-direction: column;
        gap: 20px;
      }

      .main-heading {
        font-size: 2.5rem;
      }

      .sub-heading {
        font-size: 1.1rem;
      }

      .tiles-container {
        grid-template-columns: 1fr;
        gap: 20px;
        margin-top: 30px;
      }

      .tile {
        padding: 30px 20px;
      }

      .main-container {
        padding: 20px 15px;
      }
    }

    @media (max-width: 480px) {
      .main-heading {
        font-size: 2rem;
      }

      .logo-image {
        width: 60px;
        height: 60px;
      }

      .tile-icon {
        font-size: 2.8rem;
      }
    }
  </style>
</head>
<body>
  <!-- Include shared navbar -->
  <%- include('partials/header') %>

  <!-- Main Container -->
  <div class="main-container">
    
    <!-- Header Section -->
    <div class="header-section">
      <div class="logo-container">
        <img src="/images/enov8_logo-removebg-preview.png" alt="Enov8 Logo" class="logo-image">
      </div>
      <div class="header-text">
        <h1 class="main-heading">Enov8 Help Portal - Main</h1>
      </div>
    </div>

    <!-- Sub Heading -->
    <p class="sub-heading">
      Your comprehensive resource center for expert support, detailed documentation, 
      and step-by-step tutorials to maximize your Enov8 experience.
    </p>

    <!-- Three Tiles -->
    <div class="tiles-container">
      
      <!-- FAQ Tile -->
      <div class="tile">
        <i class="bx bx-help-circle tile-icon"></i>
        <h3 class="tile-title">Frequently Asked Questions</h3>
        <p class="tile-description">
          Find instant answers to common questions with our comprehensive FAQ database, 
          curated by our expert support team.
        </p>
        <a href="/faq" class="tile-link">
          Explore FAQs <i class="bx bx-right-arrow-alt"></i>
        </a>
      </div>

      <!-- Guides Tile -->
      <div class="tile">
        <i class="bx bx-book-open tile-icon"></i>
        <h3 class="tile-title">Expert Guides</h3>
        <p class="tile-description">
          Access detailed how-to guides, best practices, and professional workflows 
          organized by category for easy navigation.
        </p>
        <a href="/guide" class="tile-link">
          Browse Guides <i class="bx bx-right-arrow-alt"></i>
        </a>
      </div>

      <!-- Videos Tile -->
      <div class="tile">
        <i class="bx bx-video tile-icon"></i>
        <h3 class="tile-title">Video Tutorials</h3>
        <p class="tile-description">
          Watch high-quality tutorial videos and feature demonstrations 
          created by Enov8 professionals and industry experts.
        </p>
        <a href="/video" class="tile-link">
          Watch Videos <i class="bx bx-right-arrow-alt"></i>
        </a>
      </div>
      
    </div>

  </div>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/theme.js"></script>
  
  <!-- Initialize animations -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Add scroll animation to tiles
      const tiles = document.querySelectorAll('.tile');
      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry, index) => {
          if (entry.isIntersecting) {
            setTimeout(() => {
              entry.target.style.opacity = '1';
              entry.target.style.transform = 'translateY(0)';
            }, index * 150);
          }
        });
      });
      
      tiles.forEach(tile => {
        tile.style.opacity = '0';
        tile.style.transform = 'translateY(30px)';
        tile.style.transition = 'all 0.6s ease';
        observer.observe(tile);
      });
    });
  </script>
</body>
</html>
